<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Emails</h1>
    <div class="flex space-x-4">
      <%= link_to "New template", new_template_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      <%= link_to "New email", new_email_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
  </div>

  <div class="flex mt-8 items-start space-x-8">
    <div id="emails" class="flex flex-col w-1/3">
      <% @emails.each do |email| %>
        <div class="hover:bg-blue-200 hover:translate-x-1">
          <%= link_to email_path(email), data: { turbo_frame: "email-details" },
            class: "font-medium underline underline-offset-2" do %>
            <%= email.subject %>
          <% end %>
          <div class="text-gray-300">
            <%= email.created_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
          <div class="border border-gray-100">
          </div>
        </div>
      <% end %>
    </div>

    <div id="email-preview" class="w-2/3 border border-gray-300 min-h-screen">
      <%= turbo_frame_tag "email-details" do %>
        <p class="uppercase text-gray-300 text-xl text-start"> This is the email preview </p>
      <% end %>
    </div>
  </div>
</div>
